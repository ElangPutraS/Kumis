<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cekGiziAlergi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Cek Gizi"
            android:textColor="@android:color/black"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAlergi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Alergi :"
            android:textColor="@android:color/black"
            android:textSize="8pt" />

        <CheckBox
            android:id="@+id/alergi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Susu, Keju, Mengtega" />

        <CheckBox
            android:id="@+id/alergi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Biji - bijian" />

        <CheckBox
            android:id="@+id/alergi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Telur" />

        <CheckBox
            android:id="@+id/alergi4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Daging dan Unggas" />

        <CheckBox
            android:id="@+id/alergi5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Ikan" />

        <CheckBox
            android:id="@+id/alergi6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Sayur - sayuran" />

        <CheckBox
            android:id="@+id/alergi7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Produk Fermentasi(Kecap, Tauco, Tempe, dan Tape)" />

        <CheckBox
            android:id="@+id/alergi8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Jeruk, Stroberry, dan Tomat." />

        <CheckBox
            android:id="@+id/alergi9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Ikan Lele, Salmon, Sarden, Tuna, Hati Sapi" />

        <CheckBox
            android:id="@+id/alergi10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Alpukat, Kacan Almond, Gandum, Kecambah" />

        <CheckBox
            android:id="@+id/alergi11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:onClick="onCheckboxClickedAlergi"
            android:text="Hati dan Yogurth" />

        <Button
            android:id="@+id/buttonAlergi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:onClick="keRiwayat"
            android:text="NEXT" />

    </LinearLayout>
</ScrollView>